{
  "name": "ulint",
  "type": "module",
  "version": "0.0.7",
  "description": "A lightweight ESLint wrapper with custom configuration and dependency management.",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "bin": {
    "ulint": "./dist/cli.js"
  },
  "scripts": {
    "prepublishOnly": "pnpm clean && pnpm check-types && pnpm build && pnpm lint",
    "release": "npm publish --access public",
    "test": "vitest",
    "check-types": "tsc --noEmit",
    "lint": "node dist/cli.js . --max-warnings 0",
    "clean": "rm -rf dist",
    "build": "pnpm vite build",
    "dev": "pnpm vite build -w",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "ulint",
    "lint",
    "eslint",
    "react",
    "next",
    "node",
    "javascript",
    "typescript",
    "wrapper",
    "linter",
    "code-quality",
    "code-review",
    "clean-code",
    "static-analysis"
  ],
  "author": {
    "name": "Estarlin R",
    "email": "dev@estarlincito.com",
    "url": "https://estarlincito.com"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "license": "MIT",
  "homepage": "https://github.com/estarlincito/ulint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/estarlincito/ulint.git"
  },
  "bugs": {
    "url": "https://github.com/estarlincito/ulint/issues"
  },
  "dependencies": {
    "cachio": "^0.0.3",
    "eslint": "^9.35.0",
    "pkg-scope": "^0.0.3"
  },
  "peerDependencies": {
    "eslint": "^9.35.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "doglob": "^0.0.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4",
    "ulint-config-ts": "^0.0.7"
  }
}
